= form_tag quiz_path, method: :post do
  .form-group
    = label :joined_year, I18n.t('quiz.new.joined_year')
    = select_tag :joined_year, options_for_select(joined_years_selection, selected: params['joined_year']), include_blank: true, class: 'form-control'
  .form-group
    = label :project_id, I18n.t('quiz.new.project')
    = select_tag :project_id, options_from_collection_for_select(projects, :id, :name, selected: params['project_id']), include_blank: true, class: 'form-control'
  .form-group
    = label :group_id, I18n.t('quiz.new.group')
    = select_tag :group_id, options_from_collection_for_select(groups, :id, :name, selected: params['group_id']), include_blank: true, class: 'form-control'
  .form-group
  = submit_tag I18n.t('quiz.new.start_quiz'), class: 'btn btn-primary'
